<?xml version="1.0"?>
<launch>

 <arg name="joystick" value="false"/>
  
  <node pkg="gmapping" name="slam_gmapping" type="slam_gmapping" output="screen">
    <remap from="scan" to="cob_scan_unifier/scan_unified"/>
    <rosparam file="$(find neo_mp_500)/configs/navigation/gmapping/gmapping_basic.yaml" command="load" />
  </node>

 <!-- Launch robot control-->
 <group if="$(arg joystick)">
 
 <include file="$(find neo_mp_500)/config/teleop/teleop.launch"/>

 </group>

</launch>
